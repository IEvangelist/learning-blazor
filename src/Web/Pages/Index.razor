@page "/"
@inherits LocalizableComponentBase<Index>

<PageTitle>
    @localize["Home"]
</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
    <Authorized>
        <div id="index" class="tile is-ancestor">
            <div class="tile is-vertical is-centered is-7">
                <div class="tile">
                    <div class="tile is-parent">
                        <article class="tile is-child notification is-welcome-bg">
                            <p class="title is-family-monospace"><emoji class="wave">🖐🏽</emoji> @localize["Hi"]</p>
                            <p class="has-text-black is-family-monospace is-size-5">
                                @localize["ThankYou"]
                            </p>
                        </article>
                    </div>
                    <div class="tile is-parent">
                        <article class="blazor-tile-container">
                            <div class="gradient-bg jokes-gradient"></div>
                            <div class="icon-overlay zap-circle"></div>
                            <div class="blaze-content">
                                <p class="title">🤓 @localize["Jokes"]</p>
                                <JokeComponent />
                            </div>
                        </article>
@*                        <article class="tile is-child notification is-jokes-bg">
                            <p class="title">🤓 @localize["Jokes"]</p>
                            <JokeComponent />
                        </article>*@
                    </div>
                </div>
                <div class="tile is-parent">
                    <article class="blazor-tile-container">
                        <div class="gradient-bg weather-gradient"></div>
                        <div class="icon-overlay zap-svg"></div>
                        <div class="blaze-content">
                            <p class="title" translate="no">🔥 Blazor-@localize["Weather"]</p>
                            <WeatherComponent />
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
